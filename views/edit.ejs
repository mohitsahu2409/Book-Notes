<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Book</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Edit Book</h1>

    <div class="card shadow-sm p-4">
      <form action="/update/<%= book.id %>" method="POST">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input type="text" name="title" class="form-control" value="<%= book.title %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Author</label>
          <input type="text" name="author" class="form-control" value="<%= book.author %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Rating</label>
          <input type="number" name="rating" class="form-control" value="<%= book.rating %>" min="1" max="5" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Cover URL</label>
          <input type="text" name="cover_url" class="form-control" value="<%= book.cover_url %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Date Read</label>
          <input type="date" name="date_read" class="form-control" value="<%= book.date_read ? book.date_read.toISOString().split('T')[0] : '' %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Review</label>
          <textarea name="review" class="form-control"><%= book.review %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Book</button>
        <a href="/" class="btn btn-secondary ms-2">Cancel</a>
      </form>
    </div>
  </div>
</body>
</html>
